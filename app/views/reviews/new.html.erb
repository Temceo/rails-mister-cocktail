

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="row justify-content-center">
        <div class="col-md-8">
        <br>
          <h3>New Review for <%= link_to @cocktail.name, @cocktail %></h3>
            <%= simple_form_for [@cocktail, @review] do |f| %>
              <%= f.input :comment %>
              <%= f.input :rating %>
              <%= f.submit class: 'btn btn-primary btn-lg' %>
              <% end %>
        </div>
      </div>
    </div>
  </div>
</div>