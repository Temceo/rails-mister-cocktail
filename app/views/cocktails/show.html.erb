<h1> <%= @cocktail.name %> </h1>

<% @cocktail.doses.each do |dose| %>
  <p>
    <%= dose.description %>
    <%= dose.ingredient.name %>
  </p>

  <%= link_to 'Delete dose', dose_path(dose), method: :delete %>
  
<% end %>


<%= link_to 'Back', cocktails_path %>
<%= link_to  "Add a dose", new_cocktail_dose_path(@cocktail) %>
